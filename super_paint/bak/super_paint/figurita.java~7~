public class figurita
{
  // ***** Atributos de la clase *****
  private Shape cosa;
  private int grosor_linea, tipo_trazo, tipo_relleno;
  private Color color;
  // *********************************

  public figurita()
  {
    cosa = null;
    grosor_linea = tipo_trazo = tipo_relleno = 0;
  }

  public figurita(Shape c, int gro, int tra, int rell, Color col)
  {
    cosa = c;
    grosor_linea = gro;
    tipo_trazo = tra;
    tipo_relleno = rell;
    color = col;
  }

  public Shape getCosa()
  {
    return cosa;
  }

  public int getGrosorLinea()
  {
    return grosor_linea;
  }

  public int getTipoTrazo()
  {
    return tipo_trazo;
  }

  public int getTipoRelleno()
  {
    return tipo_relleno;
  }

  public Color getColor()
  {
    return color;
  }

}
